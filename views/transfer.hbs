<!-- 2 columns form -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title">Transfer CRKK Coin</h5>
    </div>

    <div class="card-body">
        Transfer is non-reversible. Please be sure to enter the correct amount and address to transfer to.
    </div>

    <div class="card-body">
        <form action="/actions/transfer" method="post">
            <div class="row">

                <div class="col-lg-6">
                    <fieldset>
                        <legend class="font-weight-semibold"><i class="icon-wallet mr-2"></i> Account details</legend>

                        <div class="form-group row">
                            <label class="col-lg-2 col-form-label">Address:</label>
                            <div class="col-lg-10">
                                <input type="text" id="wallet" value="{{userDetails.wallet}}" class="form-control" readonly>
                            </div>
                        </div>

<!--                        <div class="form-group row">-->
<!--                            <label class="col-lg-2 col-form-label">KDA Balance:</label>-->
<!--                            <div class="col-lg-10">-->
<!--                                <input type="text" value="{{userDetails.balance}}" class="form-control" readonly>-->
<!--                            </div>-->
<!--                        </div>-->

<!--                        <div class="form-group row">-->
<!--                            <label class="col-lg-2 col-form-label">USD Balance:</label>-->
<!--                            <div class="col-lg-10">-->
<!--                                <input type="text" value="{{userDetails.fiatBalance}}" class="form-control" readonly>-->
<!--                            </div>-->
<!--                        </div>-->

                        <div class="form-group row">
                            <label class="col-lg-2 col-form-label">Transfer CRKK amount:</label>
                            <div class="col-lg-10">
                                <input type="text" id="amount" class="form-control">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-2 col-form-label">Transfer to address:</label>
                            <div class="col-lg-10">
                                <input type="text" id="toWallet" class="form-control">
                            </div>
                        </div>

                    </fieldset>
                </div>
            </div>
            <div class="text-right">
                <button type="submit" id="toBlockchain" class="btn btn-primary">Submit form <i class="icon-paperplane ml-2"></i></button>
            </div>
        </form>
    </div>
</div>
<!-- /2 columns form -->
<script>
    $(document).ready(function() {
        $('#toBlockchain').click(async function(event){
            event.preventDefault()
            const toWallet = $('#toWallet').val()
            const amount = $('#amount').val()
            $.post( "/actions/transfer", {toWallet, amount} );
            setTimeout(() => { window.location.href = '/' }, 1000);
        });
    })
</script>